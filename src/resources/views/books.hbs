{{!-- css --}}
<style>
    .content {
        padding: 10px;
        background-color: #333
    }
    .title__content {
        position: relative;
        color:#fff;
    }
    .title__content::after {
        content: "";
        position: absolute;
        margin-top: 5px;
        border: 2px solid rgb(255, 255, 255);
        width: 100%;
        display: flex;
        flex-direction: column;
    }
    .card-img-top {
        width: 100%;
        height: 150px;
        object-fit: cover;
    }
    .card-body {
        height: 200px;
    }
    .card {
        margin-bottom: 30px;
    }
    .card:hover {
    box-shadow: rgba(0, 0, 0, 0.3) 0px 19px 38px, rgba(0, 0, 0, 0.22) 0px 15px 12px;
    }
    .card-author {
        font-weight: bold;
    }
</style>

{{!-- content books --}}
<div class="content">
    <span class="title">
        <span class="title__content">Tất cả sách</span>
    </span>
    <div class="mt-4 row">
        {{#each book}}
            <div class="col-sm-6 col-lg-2 ">
                <div class="card">
                    <a href="{{this.slug}}">
                        <img  class="card-img-top" src="{{this.image}}" alt="Card image cap">
                    </a>
                    <div class="card-body">
                        <a href="{{this.slug}}">
                        <h5 class="card-title">{{this.name}}</h5>
                        </a>
                        <p class="card-text"><span class="card-author">Tác giả:</span> {{this.author}}</p>
                        <a href="{{this.slug}}" class="btn btn-primary">Go Book</a>
                    </div>
                </div>
            </div>

        {{/each}}
    
    </div>
</div>